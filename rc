let mouse = 1;
let repeat = 2;
switch (count) {
    case 1:
        mouse = 1;
        repeat = 1;
        break;
    case 3:
        mouse = 3;
        repeat = 1;
        break;
    default:
}
io.run('xdotool', ['mousemove', '--polar', '0', '0', 'click', '--repeat', repeat.toString(), mouse.toString()]);
EOF
nmap -builtin -ex ,c <count>click

